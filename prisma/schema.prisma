generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  bannerUrl     String?
  bannerKey     String?
  accounts      Account[]
  sessions      Session[]
  videos        Video[]
  videoViews    videoViews[]
  reactionType  videoReactions[]
  commentedPeople   Comments[] @relation("UserCommenting")

  // NEW: Relationships for subscriptions
  // People who have subscribed to THIS user
  subscribers   Subscription[] @relation("UserBeingSubscribedTo")
  
  // People THIS user has subscribed to
  following     Subscription[] @relation("UserSubscribing")

  //User who reacted on a comment
  commentReacter CommentReactions[] @relation("UserReactedOnComment")

  //users who has created playlist
  ownsPlaylist Playlists[] @relation("UserCreatedPlaylist")

  

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Category{
    id   String    @id @default(cuid())
    name String
    description String @db.Text
    videos   Video[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("categories")
}

enum VideoVisibility{
    PUBLIC
    PRIVATE
}

model Video{
    id   String    @id @default(cuid())
    name String @db.Text
    description String @db.Text
    muxStatus String @default("waiting")
    muxAssetId String? @unique @db.Text
    muxUploadId String? @unique @db.Text
    muxPlaybackId String? @unique @db.Text
    muxTrackId String? @unique @db.Text
    muxTrackStatus String? @db.Text
    thumbnailUrl String? 
    thumbnailKey String @db.Text @default("")
    previewUrl String? 
    previewKey String @db.Text @default("")
    duration Int @default(0)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    visibility VideoVisibility @default(PRIVATE)

    VideoCommented  Comments[] @relation("VideoOnWhichCommented")

    // Foreign key to User
    userId String
    categoryId String?

    //Relationship field to User model
    user User @relation(fields: [userId], references: [id],onDelete: Cascade)
    category Category? @relation(fields: [categoryId], references: [id],onDelete: SetNull)

    videoViews videoViews[]
    reactionType videoReactions[]

    // Video Belongs To Playlist
    playlist PlaylistVideos[] @relation("VideoBelongsTo")


    @@map("videos")
}


model videoViews{
    id   String    @id @default(cuid())
    userId      String
    videoId     String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user User @relation(fields: [userId], references: [id],onDelete: Cascade)

    videos Video? @relation(fields: [videoId], references: [id],onDelete: Cascade)

    @@map("videoViews")
}

enum ReactionType{
    like
    dislike
}

model videoReactions{
    id   String    @id @default(cuid())
    userId      String
    videoId     String
    reactionType ReactionType 
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user User @relation(fields: [userId], references: [id],onDelete: Cascade)

    videos Video? @relation(fields: [videoId], references: [id],onDelete: Cascade)

    @@map("videoReactions")
}


model Subscription {
    id        String   @id @default(cuid())
    viewerId  String   // The person following
    creatorId String   // The person being followed
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // We name the relations so Prisma knows which is which
    viewer  User @relation("UserSubscribing", fields: [viewerId], references: [id], onDelete: Cascade)
    creator User @relation("UserBeingSubscribedTo", fields: [creatorId], references: [id], onDelete: Cascade)

    @@unique([viewerId, creatorId]) // Prevents a user from subscribing to the same creator twice
    @@index([viewerId])
    @@index([creatorId])
    @@map("subscriptions")
}



model Comments {
    id        String   @id @default(cuid())
    userId      String
    videoId     String
    value   String @db.Text @default("")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // --- New Fields for Threading ---
    parentId  String?  // Made optional because top-level comments won't have a parent
    parent    Comments?  @relation("CommentToComment", fields: [parentId], references: [id], onDelete: Cascade)
    replies   Comments[] @relation("CommentToComment")
    // --------------------------------

    user User @relation("UserCommenting",fields: [userId], references: [id],onDelete: Cascade)

    videos Video? @relation("VideoOnWhichCommented",fields: [videoId], references: [id],onDelete: Cascade)

    // Reaction belongs to a comment
    commentReaction CommentReactions[] @relation("ReactionBelonsToComment")

    @@map("comments")
}


model CommentReactions{
    id String @id @default(cuid())
    userId String 
    commentId String
    reactionType ReactionType 
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt


        // We name the relations so Prisma knows which is which
    user  User @relation("UserReactedOnComment", fields: [userId], references: [id], onDelete: Cascade)
    comment Comments @relation("ReactionBelonsToComment", fields: [commentId], references: [id], onDelete: Cascade)


    @@map("commentReactions")
}

model Playlists{
    id String @id @default(cuid())
    name String 
    description String
    userId String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt


        // We name the relations so Prisma knows which is which
    user  User @relation("UserCreatedPlaylist", fields: [userId], references: [id], onDelete: Cascade)

    //playlists contains these videos
    videos PlaylistVideos[] @relation("PlaylistContainsThisVideo")


    @@map("playlists")
}

model PlaylistVideos {
    id String @id @default(cuid())
    playlistId String
    videoId String

    playlist Playlists @relation("PlaylistContainsThisVideo", fields: [playlistId], references: [id], onDelete: Cascade)

    video Video @relation("VideoBelongsTo", fields: [videoId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([playlistId, videoId])

    @@map("playlistVideos")
}